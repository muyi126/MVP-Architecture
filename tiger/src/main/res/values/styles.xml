<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/font_text</item>
    </style>

    <style name="AppTheme.Base" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base.ImageView">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.Base.FontNormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.Base.FontSecondary" parent="AppTheme.Base.FontNormal">
        <item name="android:textSize">@dimen/font_secondary_text</item>
    </style>

    <style name="AppTheme.Base.FontTips" parent="AppTheme.Base.FontNormal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_tips_text</item>
    </style>

    <style name="AppTheme.Base.Dialog" parent="@android:style/Theme.Panel">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Base.Anim.SlideRightAnim</item>
    </style>

    <style name="AppTheme.Base.Dialog.SlideBottomDialog" parent="AppTheme.Base.Dialog">
        <item name="android:windowAnimationStyle">@style/AppTheme.Base.Anim.SlideBottomAnim</item>
    </style>

    <style name="AppTheme.Base.Anim.SlideRightAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.Base.Anim.SlideBottomAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="AppTheme.Base.Dialog.ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>